<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black_shade_1"
    tools:context=".HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to the application."
        android:layout_marginTop="20dp"
        android:textSize="23sp"
        android:textColor="@color/yellow"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="4dp"
        />
    <Button
        android:id="@+id/button1"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="125dp"
        android:text="Language Translator"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="125dp"
        android:gravity="center_horizontal"
        android:text="Dictionary" />

    <Button
        android:id="@+id/button3"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="375dp"
        android:layout_marginLeft="125dp"
        android:gravity="center_horizontal"
        android:text="Let's make a Note" />

    <Button
        android:id="@+id/button4"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="125dp"
        android:gravity="center_horizontal"
        android:text="Let's check your knowledge" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="113dp"
        android:layout_height="103dp"
        android:layout_marginTop="100dp"
        android:gravity=""
        app:srcCompat="@drawable/translator_image" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="113dp"
        android:layout_height="103dp"
        android:layout_marginTop="225dp"
        android:gravity="center_horizontal"
        app:srcCompat="@drawable/dictionary_image" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="113dp"
        android:layout_height="103dp"
        android:layout_marginTop="350dp"
        android:gravity=""
        app:srcCompat="@drawable/note_add_icon" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="113dp"
        android:layout_height="103dp"
        android:layout_marginTop="475dp"
        android:gravity=""
        app:srcCompat="@drawable/quiz" />


</FrameLayout>